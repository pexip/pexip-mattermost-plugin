{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@components/*": ["src/App/components/*"],
      "@contexts/*": ["src/App/contexts/*"],
      "@utils/*": ["src/App/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "public", "update-segmenter-files.js"]
}
